      <main id="main" class="main">

        <div class="pagetitle">
          <h1>Dashboard</h1>
          <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/Desk2Dashboard">Dashboard</a></li>
              <li class="breadcrumb-item active">View Complaint</li>
            </ol>
          </nav>
        </div>

        <section class="section">
          <div class="row">
            <div class="col-lg-6">

              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Complaint Form</h5>

                  <!-- General Form Elements -->
                  <form>
                    <div class="row mb-3">
                      <label for="inputText" class="col-sm-3 ">Name</label>
                      <div class="col-sm-9">
                        <%=EndUserData.Name%>
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="inputText" class="col-sm-3 ">Gender</label>
                      <div class="col-sm-9">
                        <%=EndUserData.Gender%>
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="inputText" class="col-sm-3 ">Age</label>
                      <div class="col-sm-9">
                        <%=EndUserData.Age%>
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="inputText" class="col-sm-3 ">Address</label>
                      <div class="col-sm-9">
                        <%=EndUserData.Address%>
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="inputText" class="col-sm-3 ">City</label>
                      <div class="col-sm-9">
                        <%=EndUserData.City%>
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="inputText" class="col-sm-3 ">State</label>
                      <div class="col-sm-9">
                        <%=EndUserData.State%>
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="inputText" class="col-sm-3 ">Mobile</label>
                      <div class="col-sm-9">
                        <%=EndUserData.Phone%>
                      </div>
                    </div>
                    <%const dateObject=new Date(complaint.Time["_seconds"]*1000)%>
                      <%const date=dateObject.getDate();%>
                        <%const month=dateObject.getMonth() + 1;%>
                          <%const year=dateObject.getFullYear();%>
                            <div class="row mb-3">
                              <label for="inputText" class="col-sm-3 ">Date</label>
                              <div class="col-sm-9">
                                <%=`${date}-${month}-${year}`%>
                              </div>
                            </div>
                            <div class="row mb-3">
                              <label for="inputPassword" class="col-sm-3 ">Complaint Body</label>
                              <div class="col-sm-9">
                                <%=complaint.ComplaintBody%>
                              </div>
                            </div>
                            <div class="row mb-3">
                              <label for="inputPassword" class="col-sm-3 ">Complaint Summary</label>
                              <div class="col-sm-9">

                                <%=complaint.ComplaintSummary%>

                              </div>
                            </div>
                            <div class="row mb-3">
                              <label for="inputPassword" class="col-sm-3 "></label>
                              <div class="col-sm-9">
                                  <a href="/ViewImage?url=https://complaint-bucket-sih.s3.ap-south-1.amazonaws.com/<%=cid%>.jpg" class="btn-btn-primary">View Document</a>
                            </div>
                          </div>

                            <div class="row mb-3">
                              <label class="col-sm-5 "></label>
                              <div class="col-sm-7">
                                <a href="/approveComplaintDesk2?cid=<%=`${complaint.id}`%>"><button type="button"
                                    class="btn btn-primary">Approve</button></a>
                              </div>
                            </div>
                            <div class="row mb-3">
                              <label class="col-sm-5 "></label>
                              <div class="col-sm-7">
                                <a href="/rejectComplaint?cid=<%=`${complaint.id}`%>"><button type="button"
                                    class="btn btn-primary">Reject</button></a>
                              </div>
                            </div>

                  </form><!-- End General Form Elements -->

                </div>
              </div>

            </div>
            <!-- <section class="section">
            <div class="row"> -->
            <div class="col-lg-6">
              <section style="background-color: #ffffff;">
                <div class="container py-5">

                  <div class="row" style="overflow-y:scroll; height:400px">
                    <div class="col-md-6 col-lg-7 col-xl-8">

                      <ul class="centerlist-unstyled">

                        <%for(var i=0;i< complaint.comments.length;i++){%>
                          <li class="d-flex justify-content-between mb-6">
                            <div class="card w-100">
                              <div class="card-header d-flex justify-content-between p-3">
                                <p class="fw-bold mb-0">
                                  <%=complaint.comments[i].uid%>
                                </p>


                                <%const dateObject=new Date(complaint.comments[i].time._seconds*1000)%>
                                  <%const date=dateObject.getDate();%>
                                    <%const month=dateObject.getMonth() + 1;%>
                                      <%const year=dateObject.getFullYear();%>
                                        <p class="text-muted small mb-0"><i class="far fa-clock">
                                            <%=`${date}-${month}-${year}`%>
                                          </i> </p>
                              </div>
                              <div class="card-body">
                                <p class="mb-0">
                                  <%=complaint.comments[i].comment%>
                                </p>
                              </div>
                            </div>
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/avatar-5.webp" alt="avatar"
                              class="rounded-circle d-flex align-self-start ms-3 shadow-1-strong" width="60">
                          </li>
                          <%}%>

                      </ul>
                    </div>
                  </div>
                </div>
                <div>
                  <li class="bg-white mb-3">
                    <div class="form-outline">
                      <form action="/AddComment" method="post">
                        <textarea class="form-control" id="textAreaExample2" name="comment" rows="4"></textarea>
                        <label class="form-label" for="textAreaExample2">Message</label>
                        <input type="text" name="uid" value="<%=complaint.UID%>" hidden>
                        <input type="text" name="cid" value="<%=cid%>" hidden>
                        <button type="submit" class="btn btn-primary btn-rounded float-end">Send</button>
                        <br>
                      </form>
                    </div>
                  </li>



                </div>



            </div>
        </section>
        </div>

        </div>

        </section>

