                    <!-- General Form Elements -->
                    <form class="row g-3 needs-validation" action="/ConfirmForgotPassword" method="post" novalidate>
                      <div class="col-12 mt-4">
                        <div class="col-sm-6">
                          <a href="/SendOTP">Send/Resend OTP</a>
